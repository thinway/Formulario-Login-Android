<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/fields"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/username_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/username_label"
                android:text="@string/username_label"
                android:textSize="18sp"
                android:layout_weight="25"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_toRightOf="@id/username_label"
                android:hint="@string/username_input_hint"

                android:layout_weight="75"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/password_label"
                android:text="@string/password_label"
                android:textSize="18sp"
                android:layout_weight="25"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_toRightOf="@id/password_label"
                android:hint="@string/password_input_hint"
                android:layout_weight="75"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/confirm_label"
                android:text="@string/confirm_label"
                android:textSize="18sp"
                android:layout_weight="25"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_toRightOf="@id/password_label"
                android:hint="@string/confirm_input_hint"
                android:layout_weight="75"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>


    <Button
        android:id="@+id/submit_button"
        android:layout_below="@id/fields"
        android:layout_alignRight="@id/fields"
        android:text="@string/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
